<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<File name="File" fileName="vendingMachine.log" append="true">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} (%F:%L) - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="vendingmachine.VendingMachine" level="debug" />
		<Root level="debug">
			<AppenderRef ref="File"/>
		</Root>
	</Loggers>
</Configuration>